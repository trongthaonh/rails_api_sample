/*
 * albumList
 */

 .albumList
   position: relative
   margin: 0 auto
   &__layout
     display: table
     width: 10vw /* n=10 */
     height: 10vw
     line-height: $listLineHeight
     background-color: #fff
     z-index: 1
     a
       display: table-cell
       width: 100%
       height: 100%
       text-align: center
       vertical-align: middle
     img
       width: 100%
       height: auto
       -webkit-transition: transform 0.2s linear
       transition: transform 0.2s linear
     .fixHeight
       width: auto
       height: 10vw
     &:hover
       z-index: 2
       img
         -webkit-transform: scale(1.1)
         transform: scale(1.1)


@media screen and (max-width: 1500px)
  .albumList__layout
    width: 12.5vw /* n=8 */
    height: 12.5vw
    .fixHeight
      height: 12.5vw

@media screen and (max-width: 1400px)
  .albumList__layout
    width: 14.29vw /* n=7 */
    height: 14.29vw
    .fixHeight
      height: 14.29vw

@media screen and (max-width: 1200px)
  .albumList__layout
    width: 16.67vw /* n=6 */
    height: 16.67vw
    .fixHeight
      height: 16.67vw

@media screen and (max-width: 1000px)
  .albumList__layout
    width: 20vw /* n=5 */
    height: 20vw
    .fixHeight
      height: 20vw

@media screen and (max-width: 800px)
  .albumList__layout
    width: 25vw /* n=4 */
    height: 25vw
    .fixHeight
      height: 25vw
