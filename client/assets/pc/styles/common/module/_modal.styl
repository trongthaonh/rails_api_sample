/*
 * modal
 */

.js-modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.7)
  z-index: 4

.js-modal-wrapper
  position: relative
  width: 100%
  height: 100%

.js-modal-inner
  position: absolute
  top: 50%
  left: 50%
  padding: 20px
  background-color: #fff
  border-radius: 4px
